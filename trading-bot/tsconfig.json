{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2023"
    ],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": [
    "src",
    "tests",
    "jest.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
